{
	"extends": "stylelint-config-prettier",
	"plugins": ["stylelint-prettier"],
	"rules": {
		"prettier/prettier": true,

		"indentation": "tab",
		"selector-type-no-unknown": null,
		"no-descending-specificity": null,
		"property-no-unknown": [
			true,
			{
				"ignoreProperties": ["overflow-scrolling"],
				"checkPrefixed": true
			}
		]
	}
}
